@{
    ViewData["Title"] = "FeverCheck";
}

<h4>Enter your temperature to see if you have a fever</h4>
<form method="post" enctype="multipart/form-data" asp-controller="Doctor" asp-action="FeverCheck">

    <input type="number" id="temperature" name="Temperature" min="1" max="150" step="0.1" value="37.0">
    <input type="submit" name="submit" value="Submit"/>

</form>


    @if (ViewBag.result != null )
    {
        <div class="resultat"> The result: @ViewBag.result</div>
    }

