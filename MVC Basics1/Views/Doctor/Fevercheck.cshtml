@{
    ViewData["Title"] = "FeverCheck";
}

<h2>Check yourself for fever</h2>

@if (ViewBag.result != null)
{
    <div> @ViewBag.result</div> <!-- A way to remember the last temperature entered -->
}


<form method="post" enctype="multipart/form-data" asp-controller="Doctor" asp-action="FeverCheck">

    <input type="number" id="temperature" name="Temperature" min="1" max="150" step="0.1" value="@ViewBag.lastTemp"> 
    <input type="submit" name="submit" value="Submit" />

</form>




