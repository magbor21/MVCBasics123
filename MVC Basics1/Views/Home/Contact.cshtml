@{
    ViewData["Title"] = "Contact";
}

<h2>My contact info</h2>
<ul>
    @if (ViewBag.phone != null && ViewBag.phoneInternational != null)
    {
    <li> Phone: <a href="tel:@ViewBag.phoneInternational">@ViewBag.phone</a> </li>
    }
    @if (ViewBag.email != null)
    {
    <li> E-mail: <a href="mailto:@ViewBag.email">@ViewBag.email</a> </li>
    }
</ul>

