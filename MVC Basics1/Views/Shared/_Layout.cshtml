<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - MCV Assignment 1</title>
    <link rel="icon" href="~/favicon.ico" /> 
    <link rel="stylesheet" href="~/css/site.css" />




</head>
<body>
    <header>
        <nav class="navbar">               
            <ul class="navbar-nav">
                <li>
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MVC Assignments</a>
                </li>

                <li class="nav-item">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "About" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="About">About</a>
                </li>
                <li class="nav-item">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contact" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Contact">Contact info</a>
                </li>
                <li class="nav-item">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Projects" ? "active" : "")" asp-area="" asp-controller="Home" asp-action="Projects">My Projects</a>
                </li>
                <li class="nav-item">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "Fevercheck" ? "active" : "")" asp-area="" asp-controller="Doctor" asp-action="Fevercheck">Fevercheck</a>
                </li>
                <li class="nav-item">
                    <a class="@(ViewContext.RouteData.Values["Action"].ToString() == "GuessingGame" ? "active" : "")" asp-area="" asp-controller="Guess" asp-action="GuessingGame">Guessing Game</a>
                </li>
            </ul>   
        </nav>

    </header>

    <main>

        <div>
            @RenderBody()
        </div>
    </main>

    <footer>
        @DateTime.Now.ToString("yyyy-MM-dd") © Magnus Borglund
    </footer>

</body>
</html>
